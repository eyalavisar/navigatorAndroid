<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.FragmentPlaces">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <EditText
            android:id="@+id/et_search_term"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search_term"/>
        <Button
            android:id="@+id/btn_search_term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_term"
            android:textSize="@dimen/text_size"
            />

        <Button
            android:id="@+id/btn_search_nearby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_nearby"
            android:textSize="@dimen/text_size"
            />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/place_recyclerview">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>