<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/place_item_id">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher_round"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/margin_item">

        <TextView
            android:layout_margin="@dimen/margin_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_item"
            android:layout_marginRight="@dimen/margin_right_item"
            android:textStyle="bold"
            android:text="@string/place_name"
            android:id="@+id/name_place"/>

        <TextView
            android:layout_margin="@dimen/margin_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_item"
            android:textStyle="italic"
            android:text="@string/place_distance"
            android:id="@+id/distance_place"/>
    </LinearLayout>

</LinearLayout>